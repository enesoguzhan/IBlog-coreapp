<link href="~/static/css/plugins/select2/select2.min.css" rel="stylesheet" />
<script src="~/static/js/plugins/select2/select2.full.min.js"></script>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kategori Listesi</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel/home/Index">Ana Sayfa</a>
            </li>
            <li>
                <a href="/panel/blogs/Index">Bloglar</a>
            </li>
            <li class="active">
                <strong>Blog Güncelle</strong>
            </li>
        </ol>
    </div>

</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Blog Oluştur</h5>
                </div>
                <div class="ibox-content">
                    <form action="/panel/blogs/Update/@Model.Id" method="post"  class="form-horizontal"  enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Başlık :</label>
                            <div class="col-lg-8">
                                <input type="text" name="name" placeholder="Başlık" class="form-control" value="@Model.Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Kategori :</label>
                            <div class="col-lg-8">
                                <select id="slCategory" name="CategoryId" class="col-lg-12">
                                    @if (ViewBag.Categories != null && ViewBag.Categories.Count > 0)
                                    {
                                        <option></option>
                                        @foreach (var item in ViewBag.Categories)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    }
                                    else
                                    {
                                        <option>Lütfen Kategori Oluşturun</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" style="margin-right:13px;">İçerik :</label>
                            <textarea name="Explanation" style="width:1053px;height:463px;" class="col-lg-9">@Model.Explanation</textarea>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Resim :</label>
                            <div class="col-lg-8">
                                <input name="images" type="file" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Yayınlanma Tarihi :</label>
                            <div class="col-lg-8">
                                <input name="PublishDateTime" type="datetime" class="form-control" value="@Model.PublishDateTime" >
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-8">
                                <div class="i-checks"><label> <input name="Status" id="cbActive" type="checkbox" value="@Model.Status.ToString()" /><i></i> Aktif </label></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var check = '@Model.Status';
    $(document).ready(function () {
        $('#slCategory').select2({ placeholder: 'Kategori Seçiniz' });
        $('#slCategory').val('@Model.Categories.Id').change();
        if (check === "True") {  
            $('#cbActive').attr('checked','checked');
        }
        $('#cbActive').click(function () {
            let val = $('#cbActive').is(":checked")
            $('#cbActive').val(val);
        })
    })
</script>