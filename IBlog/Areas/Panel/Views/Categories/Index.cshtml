<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kategori Listesi</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel/home/Index">Ana Sayfa</a>
            </li>
            <li class="active">
                <strong>Kategoriler</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Kategori Listesi</h5>
                </div>
                <div class="ibox-content">
                    <button onclick="InsertModal()" class="btn btn-primary">Yeni</button>
                    <div id="modal"></div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th style="width:10%;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>
                                            <a class="btn btn-sm btn-outline btn-success" href="javascript:UpdateModal('@item.Id','@item.Name')">Güncelle</a>
                                            <a class="btn btn-sm btn-outline btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalInsertAndUpdate" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Yeni Talep Ekle<span id="eventTitle"></span></h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label>Kategori Adı :</label>
                            <input id="categoryNameTxt" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>
@if (TempData["Message"] != null)
{
    <script>
        let message = '@TempData["Message"]';
        console.log(message);
        toastr.success(message);
    </script>

}
<script>

    function InsertModal() {
        $('.modal-footer').html(` <button type="button" onclick="InsertCategories()" class="btn btn-success btn-outline" data-disable="true">Kaydet</button>
                                                                        <button type="button" class="btn btn-danger btn-outline" data-dismiss="modal">Kapat</button>`);
        $('#modalInsertAndUpdate').modal();
    };
    function UpdateModal(Id, name) {
        $('#categoryNameTxt').val(name);
        $('.modal-footer').html(` <button type="button" onclick="UpdateCategories('${Id}')" class="btn btn-success btn-outline" data-disable="true">Güncelle</button>
                                                                            <button type="button" class="btn btn-danger btn-outline" data-dismiss="modal">Kapat</button>`);
        $('#modalInsertAndUpdate').modal();
    };

    function InsertCategories() {
        let pDatas = {
            Name: $('#categoryNameTxt').val()
        };

        $.ajax({
            type: "POST",
            url: "/Panel/CategoriesJson/CategoriesInsert",
            data: pDatas,
            DataType: "json",
            success: function (response) {
                if (response.statusCode == 200) {
                    location.reload();
                }
                else {
                    console.log(response.message);
                }
            },
            error: function (response) {
                alert(response.message);
            }
        });
    }

    function UpdateCategories(Id) {
        let pDatas = {
            Id: Id,
            Name: $('#categoryNameTxt').val()
        };

        $.ajax({
            type: "POST",
            url: "/Panel/CategoriesJson/CategoriesUpdate",
            data: pDatas,
            DataType: "json",
            success: function (response) {
                if (response.statusCode == 200) {
                   
                    location.reload();
                }
                else {
                    console.log(response.message);
                }
            },
            error: function (response) {
                alert(response.message);
            }
        });
    }
</script>