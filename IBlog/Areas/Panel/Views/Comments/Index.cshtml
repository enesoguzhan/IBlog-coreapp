@model IList<IBlog.Entities.DTO.Comments.CommentsListGetByBlogDTO>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Yorumlar</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel/home/Index">Ana Sayfa</a>
            </li>
            <li class="active">
                <strong>Yorumlar</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Yorumlar</h5>
                </div>
                <div class="ibox-content">
                    <a href="/panel/blogs/Index" class="btn btn-warning btn-outline">Geri</a>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Yorum Yapan</th>
                                    <th>Yorum</th>
                                    <th>Yorum Tarihi</th>
                                    <th style="width:10%;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserNameSurname</td>
                                        <td>@item.Comment</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            <a class="btn btn-sm btn-outline btn-danger" href="/Panel/Blogs/Delete/@item.Id">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>