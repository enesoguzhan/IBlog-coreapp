@model IBlog.Entities.DTO.PanelComponent.NewUsersDTO
<div class="col-lg-4">
    <div class="widget-head-color-box navy-bg p-lg text-center">
        <div class="m-b-md">
            <h2 class="font-bold no-margins">
                Yeni Katılan Üye
            </h2>
        </div>
        <img src="/images/@Model.AvatarImage" class="img-circle circle-border m-b-md" alt="profile">
    </div>
    <div class="widget-text-box">
        <h4 class="media-heading">@Model.NameSurname</h4>
        <p>@Model.Explanation</p>      
        <p>@Model.CreationDatetime.ToString("dd.MM.yyyy")</p>      
    </div>
</div>