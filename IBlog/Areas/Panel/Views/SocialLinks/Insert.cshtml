@model IBlog.Entities.SocialLinks
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Sosyal Link Ekle</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel/home/Index">Ana Sayfa</a>
            </li>
            <li class="active">
                <strong>Sosyal Link Ekle</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Sosyal Link Ekle</h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" role="form" method="post" action="/panel/sociallinks/Insert">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Message
                            </div>
                        }
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Linkedin :</label>
                            <div class="col-lg-8 input-group">
                                <span class="input-group-addon text-muted" id="basic-addon3">linkedin.com/in/</span>
                                <input type="text" asp-for="Linkedin" placeholder="Kullanıcı adınızı giriniz" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Github :</label>
                            <div class="col-lg-8 input-group">
                                <span class="input-group-addon text-muted" id="basic-addon3">github.com/</span>
                                <input type="text" asp-for="Github" placeholder="Kullanıcı adınızı giriniz" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Twitter :</label>
                            <div class="col-lg-8 input-group">
                                <span class="input-group-addon text-muted" id="basic-addon3">twitter.com/</span>
                                <input type="text" asp-for="Twitter" placeholder="Kullanıcı adınızı giriniz" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Facebook :</label>
                            <div class="col-lg-8 input-group">
                                <span class="input-group-addon text-muted" id="basic-addon3">facebook.com/</span>
                                <input type="text" asp-for="Facebook" placeholder="Kullanıcı adınızı giriniz" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
