@model IBlog.Entities.Users
<link href="~/static/css/plugins/select2/select2.min.css" rel="stylesheet" />
<script src="~/static/js/plugins/select2/select2.full.min.js"></script>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Profil Düzenle</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel/home/Index">Ana Sayfa</a>
            </li>
            <li class="active">
                <strong>Profil Düzenle</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Profil Düzenle</h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" role="form" method="post" action="/panel/users/Index/@Model.Id" enctype="multipart/form-data">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Message
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-8">
                                <a href="/panel/users/passwordchanged/@Model.Id" class="btn btn-sm btn-outline btn-info">Şifre Değiştir</a>
                                @if (Model.SocialLinks != null)
                                {
                                    <a href="/panel/sociallinks/update/@Model.Id" class="btn btn-sm btn-outline btn-info">Sosyal Link Güncelle</a>
                                }
                                else
                                {
                                    <a href="/panel/sociallinks/Insert/@Model.Id" class="btn btn-sm btn-outline btn-info">Sosyal Link Ekle</a>

                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Email :</label>
                            <div class="col-lg-8">
                                <label class="form-control">@Model.Email</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Adı :</label>
                            <div class="col-lg-8">
                                <input type="text" asp-for="Name" placeholder="Başlık" class="form-control" value="@Model.Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Soyadı :</label>
                            <div class="col-lg-8">
                                <input type="text" asp-for="Surname" placeholder="Başlık" class="form-control" value="@Model.Surname">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label" style="margin-right:13px;">Açıklama :</label>
                            <textarea asp-for="Explanation" style="width:1053px;height:463px;" class="col-lg-9">@Model.Explanation</textarea>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Resim :</label>
                            <div class="col-lg-8">
                                <input asp-for="AvatarImage" type="file" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
