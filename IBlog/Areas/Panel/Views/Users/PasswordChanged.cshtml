@model IBlog.Entities.DTO.Users.PasswordUpdateDTO


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Profil Düzenle</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel/home/Index">Ana Sayfa</a>
            </li>
            <li class="active">
                <strong>Şifre Değiştir</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Şifre Değitir</h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal" role="form" method="post" action="/panel/users/passwordchanged/@Model.Id">
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">
                                 @ViewBag.Message
                            </div>
                        }
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Eski Şifre :</label>
                            <div class="col-lg-8">
                                <input type="password" asp-for="OldPassword" placeholder="Eski Şifre" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Yeni Şifre :</label>
                            <div class="col-lg-8">
                                <input type="password" asp-for="Password" placeholder="Yeni Şifre" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
