@model IList<IBlog.Entities.DTO.Users.UserListDTO>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kullanıcı Listesi</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel/Home">Anasayfa</a>
            </li>
            <li class="active">
                <strong>Kullanıcı Listesi</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Kullanıcı Listesi</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Adı Soyadı</th>
                                    <th>Rolü</th>
                                    <th>Email</th>
                                    <th>Eklediği Blog</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameSurname</td>
                                        <td>@item.RoleName</td>
                                        <td>@item.Email</td>
                                        <td>@item.BlogsCount</td>
                                        <td>
                                            <a class="btn btn-sm btn-outline btn-success" href="">Güncelle</a>
                                            <a class="btn btn-sm btn-outline btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>