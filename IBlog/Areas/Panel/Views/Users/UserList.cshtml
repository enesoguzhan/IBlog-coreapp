@model IList<IBlog.Entities.DTO.Users.UserListDTO>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Kullanıcı Listesi</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/panel/Home">Anasayfa</a>
            </li>
            <li class="active">
                <strong>Kullanıcı Listesi</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Kullanıcı Listesi</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="text-align:center;">Adı Soyadı</th>
                                    <th style="text-align:center;">Rolü</th>
                                    <th style="text-align:center;">Email</th>
                                    <th style="text-align:center;">Eklediği Blog</th>
                                    <th style="text-align:center;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="text-align:center;">@item.NameSurname</td>
                                        <td style="text-align:center;">@item.RoleName</td>
                                        <td style="text-align:center;">@item.Email</td>
                                        <td style="text-align:center;">@item.BlogsCount</td>
                                        <td style="text-align:center;">
                                            <a class="btn btn-sm btn-outline btn-danger" href="javascript:DeleteItem('@item.Id')">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>s
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function DeleteItem(itemId) {
        $('#modalErrorMessage').html(`Kullanıcıyı Silmek İstediğinize Emin Misiniz ?`);
        $('#modalDanger').modal();
        $('#modalDangerFooter').html(`<a class="btn btn-sm btn-outline btn-danger" href="/panel/users/delete/${itemId}">Sil</a>`);
    }
</script>