@model IList<IBlog.Entities.DTO.Users.AuthorsCartDTO>
<div class="card-deck">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="text-center border-success">
                <img class="card-img-top" style="width:100px;margin-top:15px;" src="/images/@item.AvatarImage" alt="@item.NameSurname">
            </div>
            <div class="card-body text-center">
                <a href="/authors/@item.Id"><h5 class="card-title ">@item.NameSurname</h5></a>
                <p class="card-text"><small class="text-muted">@item.RoleName</small></p>
                <p class="card-text">@item.Explanation</p>
            </div>
            <div class="card-footer text-muted text-center">
                <p class="card-text"><small class="text-muted">İletişim : @item.Email</small></p>

            </div>
        </div>
    }
</div>