@model IBlog.Entities.DTO.Users.AuthorsBlogsDTO
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="title-bordered mb-5 d-flex align-items-center">
                <h1 class="h4">@Model.NameSurname</h1>
                <ul class="list-inline social-icons ml-auto mr-3 d-none d-sm-block">
                    <li class="list-inline-item">
                        <a href="#"><i class="ti-facebook"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#"><i class="ti-twitter"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#"><i class="ti-linkedin"></i></a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#"><i class="ti-github"></i></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-lg-2 col-md-4 mb-4 mb-md-0 text-center text-md-left">
            <img loading="lazy" class="rounded-lg img-fluid" src="/images/@Model.AvatarImage">
        </div>
        <div class="col-lg-9 col-md-8 content text-center text-md-left">
            <p>@Model.Explanation</p>
        </div>
    </div>
</div>
<section class="section-sm">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title text-center">
                    <h2 class="mb-5">Yazar Tarafından Eklenen Diğer Bloglar</h2>
                </div>
            </div>
            @foreach (var blog in Model.Blogs)
            {
                <div class="col-lg-4 col-sm-6 mb-4">
                    <article class="mb-5">
                        <div class="post-slider slider-sm">
                            @foreach (var image in blog.Images)
                            {
                                <img loading="lazy" src="/images/@image.Name" class="img-fluid" alt="post-thumb">
                            }
                        </div>
                        <h3 class="h5">
                            <a class="post-title" href="post-elements.html">
                                @blog.Name
                            </a>
                        </h3>
                        <ul class="list-inline post-meta mb-2">
                            <li class="list-inline-item">
                                <i class="ti-user mr-2"></i><a href="/authors/@Model.Id">
                                    @Model.NameSurname
                                </a>
                            </li>
                            <li class="list-inline-item">Tarih : @blog.PublishDateTime</li>
                            <li class="list-inline-item">
                                Kategori :	<a href="/blogs/getcategoryblogs/@blog.Categories.Id" class="ml-1">@blog.Categories.Name </a>
                            </li>
                        </ul>
                        <p>
                            @if (blog.Explanation.Length > 100)
                            {

                                @Html.Raw(blog.Explanation.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @blog.Explanation
                            }
                        </p>
                        <a href="/blogs/detail/@blog.Id" class="btn btn-outline-primary">Okumaya Devam Et</a>
                    </article>
                </div>
            }

        </div>
    </div>
</section>
<script src="plugins/slick/slick.min.js"></script>

<!-- Main Script -->
<script src="js/script.js"></script>
